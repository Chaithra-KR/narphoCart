<%-include("../user/layouts/personal-header.ejs")%>
            
         <section class="col-lg-8">
            <!-- Address  adding page form-->
            <form class="mt-5" method="post" action="/address" >
                <div class="bg-secondary rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center">Here you can add your new address</div>
                </div>
                <div class="row gx-4 gy-3"></div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-fn">Name</label>
                            <input class="form-control" type="text" id="account-fn" name="deliveryname" required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-phone">Phone Number</label>
                            <input class="form-control" type="text" id="account-phone" name="phone"  required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-fn">House name/Building name</label>
                            <input class="form-control" type="text" id="account-fn" name="houseName"  required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-phone">City</label>
                            <input class="form-control" type="text" id="account-phone" name="city" required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-fn">State</label>
                            <input class="form-control" type="text" id="account-fn" name="state" required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-phone">Pin no:</label>
                            <input class="form-control" type="text" id="account-phone" name="pin"  required>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label" for="account-phone">Distrit</label>
                            <input class="form-control" type="text" id="account-phone" name="distrit"  required>
                        </div>
                        <div style="display: flex;justify-content:center;margin-top: 15px;">
                        <button type="reset" class="bg-danger rounded border-0 " style="color: aliceblue;">Reset</button>&nbsp;
                        <button type="submit" class="bg-success rounded border-0 " style="color: aliceblue;">submit</button>
                        </div>
                </div>
            </form>
            </section>
        </div>
    </div>
</div>
